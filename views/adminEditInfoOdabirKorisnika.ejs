<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Odaberi korisnika</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Odaberi Korisnika Kojeg Zelite Urediti</h1>

    <form action="/admin/users/select" method="post">
        <div class="form-group">
            <label for="selectedUserId">Izaberi korisnika:</label>
            <select class="form-control" id="selectedUserId" name="selectedUserId" required>
                <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.ime %> <%= user.prezime %></option>
                <% }); %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Nastavi</button>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>