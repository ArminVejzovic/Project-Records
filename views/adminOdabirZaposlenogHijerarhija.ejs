<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Odabir zaposlenog</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>

<div class="container mt-5">
    <form action="/admin/users/hierarchy" method="post">
        <div class="form-group">
            <h3>Odabir Zaposlenog</h3><br>
            <label for="selectedUserId">Izaberite zaposlenog:</label>
            <select class="form-control" id="selectedUserId" name="selectedUserId" required>
                <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.ime %> <%= user.prezime %></option>
                <% }); %>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Nastavi</button>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
