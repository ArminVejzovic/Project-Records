<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Dodjeljivanje projekata</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
<div class="container mt-5">
    <h1 class="mb-4">Dodeljivanje Projekata Radnicima</h1>

    <form action="/admin/projects/assign" method="post">
        <div class="form-group">
            <label for="projectId">Izaberite projekat:</label>
            <select class="form-control" id="projectId" name="projectId" required>
                <% projects.forEach(project => { %>
                    <option value="<%= project.id %>"><%= project.naziv %></option>
                <% }); %>
            </select>
        </div>

        <div class="form-group">
            <label for="employeeId">Izaberite radnika:</label>
            <select class="form-control" id="employeeId" name="employeeId" required>
                <% employees.forEach(employee => { %>
                    <option value="<%= employee.id %>"><%= employee.ime %> <%= employee.prezime %></option>
                <% }); %>
            </select>
        </div>

        <!-- Zbog toga sto u specifikacijama pise da i radnik moze biti menadzer projekta -->
        <% const combinedArray = employees.concat(managers); %>

        <div class="form-group">
            <label for="managerId">Izaberite menad≈æera:</label>
            <select class="form-control" id="managerId" name="managerId" required>
                <% combinedArray.forEach(item => { %>
                    <option value="<%= item.id %>"><%= item.ime %> <%= item.prezime %></option>
                <% }); %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Dodjeli Zaposlene</button>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>
