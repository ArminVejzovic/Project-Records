<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Novi task</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="container mt-5">

<h1>Novi task</h1>

<form action="/menager/projects/create-task" method="post">

    <div class="mb-3">
        <label for="project" class="form-label">Projekat:</label>
        <select id="project" name="project" class="form-select" required>
            <% projects.forEach(project => { %>
                <option value="<%= project.id %>"><%= project.naziv %></option>
            <% }); %>
        </select>
    </div>

    <div class="mb-3">
        <label for="name" class="form-label">Naziv taska:</label>
        <input type="text" id="name" name="name" class="form-control" required>
    </div>

    <div class="mb-3">
        <label for="description" class="form-label">Opis taska:</label>
        <textarea id="description" name="description" class="form-control" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Kreiraj task</button>

</form>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
