<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dodjeli projekat</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>



<div class="container mt-5">
    <h2>Dodjeli projekat</h2>
    <form action="/menager/projects/assign" method="post">
        <div class="form-group">
            <label for="projectId">Izaberite projekat:</label>
            <select class="form-control" id="projectId" name="projectId" required>
                <% projects.forEach(project => { %>
                    <option value="<%= project.id %>"><%= project.naziv %></option>
                <% }); %>
            </select>
        </div>

        <div class="form-group">
            <label for="employeeId">Izaberite radnika:</label>
            <select class="form-control" id="employeeId" name="employeeId" required>
                <% employees.forEach(employee => { %>
                    <option value="<%= employee.id %>"><%= employee.ime %> <%= employee.prezime %></option>
                <% }); %>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Dodjeli projekat</button>
    </form>
    <br>
    <a href="/users/dashboard" class="btn btn-primary mb-3">Povratak na PoÄetak</a><br>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.0.7/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
